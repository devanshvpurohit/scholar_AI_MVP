{
    "version": 2,
    "builds": [
        {
            "src": "frontend-angular/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist/frontend-angular/browser"
            }
        },
        {
            "src": "backend-node/index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend-node/index.js"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}